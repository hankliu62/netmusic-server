#!/usr/bin/env node

/**
 * Module dependencies.
 */
var debug = require('debug')('netmusic:bin');
var http = require('http');
var fs = require('fs');

var app = require('../app');
var logConfig = require('../configs/log');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
// app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app.callback());

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * 确定目录是否存在，如果不存在则创建目录
 */
function mkdirLogsPath(logsPath) {
  if (!fs.existsSync(logsPath)) {
    fs.mkdirSync(logsPath);
    debug('mkdir logs path: ' + logsPath);
  }
}

/**
 * 初始化log相关目录
 */
function initLogsConfig() {
  if (logConfig.baseLogPath) {
    mkdirLogsPath(logConfig.baseLogPath)
    // 生成子文件夹

    for (var key in logConfig.appenders) {
      if (Object.prototype.hasOwnProperty.call(logConfig.appenders, key) && logConfig.appenders[key].path) {
        mkdirLogsPath(logConfig.baseLogPath + logConfig.appenders[key].path);
      }
    }
  }
}

// initLogsConfig();

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string' ? 'pipe ' + addr : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
